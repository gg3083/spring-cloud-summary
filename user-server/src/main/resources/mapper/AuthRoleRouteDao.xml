<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gg.user.dao.AuthRoleRouteDao">

    <resultMap type="com.gg.user.entity.RoleRoute" id="AuthRoleRouteMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="routeId" column="route_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AuthRoleRouteMap">
        select
          id, role_id, route_id
        from spring_cloud.auth_role_route
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AuthRoleRouteMap">
        select
          id, role_id, route_id
        from spring_cloud.auth_role_route
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AuthRoleRouteMap">
        select
          id, role_id, route_id
        from spring_cloud.auth_role_route
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="routeId != null">
                and route_id = #{routeId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spring_cloud.auth_role_route(role_id, route_id)
        values (#{roleId}, #{routeId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spring_cloud.auth_role_route
        <set>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="routeId != null">
                route_id = #{routeId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spring_cloud.auth_role_route where id = #{id}
    </delete>

</mapper>