<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gg.user.dao.AuthRouteDao">

    <resultMap type="com.gg.user.entity.Route" id="AuthRouteMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="serverName" column="server_name" jdbcType="VARCHAR"/>
        <result property="urlAddress" column="url_address" jdbcType="VARCHAR"/>
        <result property="urlDesc" column="url_desc" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AuthRouteMap">
        select
          id, server_name, url_address, url_desc
        from spring_cloud.auth_route
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AuthRouteMap">
        select
          id, server_name, url_address, url_desc
        from spring_cloud.auth_route
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AuthRouteMap">
        select
          id, server_name, url_address, url_desc
        from spring_cloud.auth_route
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="serverName != null and serverName != ''">
                and server_name = #{serverName}
            </if>
            <if test="urlAddress != null and urlAddress != ''">
                and url_address = #{urlAddress}
            </if>
            <if test="urlDesc != null and urlDesc != ''">
                and url_desc = #{urlDesc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spring_cloud.auth_route(server_name, url_address, url_desc)
        values (#{serverName}, #{urlAddress}, #{urlDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spring_cloud.auth_route
        <set>
            <if test="serverName != null and serverName != ''">
                server_name = #{serverName},
            </if>
            <if test="urlAddress != null and urlAddress != ''">
                url_address = #{urlAddress},
            </if>
            <if test="urlDesc != null and urlDesc != ''">
                url_desc = #{urlDesc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spring_cloud.auth_route where id = #{id}
    </delete>

</mapper>